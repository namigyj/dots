# Functions
address() {
    case "$1" in
        pub) curl "icanhazip.com" ;;
        priv) ip addr show | awk '/inet.*global/{print $2}' ;;
    esac
}

ns() {
  nix-shell -p $1 --run "$@"
}

# Export the user created function names. -- t. mvdw
export BASH_FUNCTION_NAMES=$(declare -F | awk '{if (substr($3, 0, 1) != "_") print $3}')
